<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.group28.dao.FacilityDao">
    <insert id="AddType" parameterType="com.group28.pojo.ElectricityUnitType">
        insert into virtualWorld.ElectricityUnitType(Type_ID, Max_Consumption, Min_Consumption) values (#{type_Id}, #{MAX_CONSUMMPTION}, #{MIN_CONSUMMPTION});
    </insert>

    <insert id="AddFacility" parameterType="com.group28.pojo.ElectricityUnit">
        insert into virtualWorld.ElectricityUnit values (#{FacilityId}, #{ZipCode}, #{FacilityType}, #{Name});
    </insert>

    <select id="SearchFacility" parameterType="String">
        select * from virtualWorld.ElectricityUnit where ElectricityUnitID = #{FacilityId};
    </select>

    <insert id="InsertData" parameterType="com.group28.pojo.ElectricityUnitData">
        insert into virtualWorld.ElectricityUnit values (#{DATA_REFERENCE_ID}, #{electricityUnitId}, #{timeOfStore}, #{ConsumptionAmount});
    </insert>

    <select id="GetTypeId" parameterType="String" resultType="String">
        select ElectricityType from virtualWorld.ElectricityUnit where ElectricityUnitID = #{electricityUnitId};
    </select>

    <select id="GetMaxConsumption" parameterType="String" resultType="int">
        select Max_Consumption from virtualWorld.ElectricityUnitType where Type_ID = #{type_Id};
    </select>

    <select id="GetMinConsumption" parameterType="String" resultType="int">
        select Min_Consumption from virtualWorld.ElectricityUnitType where Type_ID = #{type_Id};
    </select>
</mapper>