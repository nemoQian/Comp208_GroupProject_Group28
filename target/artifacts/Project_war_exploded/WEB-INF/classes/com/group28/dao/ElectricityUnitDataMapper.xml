<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.group28.dao.ElectricityUnitDataDao">

    <select id="getAccumulatedConsumptionAmount" resultType="int">
        select sum(eud.ConsumptionAmount) as AccumulatedConsumptionAmount
        from virtualworld.electricityunit_datastore eud, virtualworld.electricityunit eu
        where eud.ElectricityUnitID=eu.ElectricityUnitID and eud.TimeOfStore like #{Time}"%";
    </select>


    <insert id="insertData" parameterType="com.group28.pojo.ElectricityUnitData">
        insert into virtualworld.electricityunit_datastore (DATA_REFERENCE_ID, ElectricityUnitID,TimeOfStore,ConsumptionAmount) value (#{DATA_REFERENCE_ID}, #{electricityUnitId},#{timeOfStore},#{ConsumptionAmount})
    </insert>

    <delete id="deleteElectricityUnitData" parameterType="String">
        delete from virtualworld.electricityunit_datastore where ElectricityUnitID = #{electricityUnitId};
    </delete>

</mapper>